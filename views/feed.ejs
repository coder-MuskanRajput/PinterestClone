<% include ./partials/nav.ejs %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">

    <div class="cards flex flex-wrap gap-10">
      <% posts.forEach(function(elem){ %>
          <div class="card w-32">
            <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
              <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image%>" alt="">
            </div>
            <h5 class="mt-2 text-xm text-red-800"><%= elem.imageText %></h5>
            <p class="mt-2 text-sm"><%= elem.description %></p>
             
            <br>
            <h6 class="text-xs fonr-semibold opacity-500">@<%= elem.user.username%> </h6>
          </div>
     <% })%>
    </div>
  </div>
</body>
</html>